{
  "name": "nodius-code-editor",
  "version": "0.1.0",
  "description": "A lightweight, embeddable VS Code-like code editor built from scratch in TypeScript. Zero framework dependencies. Supports syntax highlighting, real-time collaboration, themes, and Web Components.",
  "type": "module",
  "main": "./dist/nodius-code-editor.umd.cjs",
  "module": "./dist/nodius-code-editor.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/nodius-code-editor.js",
      "require": "./dist/nodius-code-editor.umd.cjs"
    },
    "./style.css": "./dist/nodius-code-editor.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "editor",
    "code-editor",
    "typescript",
    "javascript",
    "syntax-highlighting",
    "collaborative-editing",
    "web-component",
    "vscode",
    "monaco-alternative",
    "text-editor",
    "ot",
    "operational-transformation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": "",
  "bugs": {
    "url": ""
  },
  "sideEffects": [
    "**/*.css"
  ],
  "dependencies": {
    "@nodius/utils": "^1.1.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "vite": "^7.3.1",
    "@types/node": "^25.3.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  }
}
